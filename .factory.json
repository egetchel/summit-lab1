{
  "v": "4.0",
  "name": "lab-01",
  "workspace": {
    "defaultEnv": "default",
    "environments": {
      "default": {
        "machines": {
          "dev-machine": {
            "attributes": {
              "memoryLimitBytes": "2147483648"
            },
            "servers": {
              "tomcat8": {
                "port": "8080",
                "protocol": "http"
              }
            },
            "volumes": {
              "m2": {
                "path": "/home/jboss/.m2"
              },
              "javadata": {
                "path": "/home/jboss/jdtls/data"
              }
            },
            "installers": [
              "org.eclipse.che.exec",
              "org.eclipse.che.terminal",
              "org.eclipse.che.ws-agent",
              "org.eclipse.che.ls.java",
              "com.redhat.bayesian.lsp"
            ]
          }
        },
        "recipe": {
          "type": "dockerimage",
          "content": "edeandrea/stacks-java-tomcat8"
        }
      }
    },
    "projects": [
      {
        "name": "SampleWebApp",
        "type": "maven",
        "path": "/SampleWebApp"
      }
    ],
    "name": "SampleWebApp",
    "commands": [
      {
        "commandLine": "mvn clean install -f ${current.project.path}/pom.xml",
        "name": "build",
        "attributes": {
          "goal": "Build"
        },
        "type": "mvn"
      },
      {
        "commandLine": "mvn clean install -f ${current.project.path}/pom.xml && cp ${current.project.path}/target/*.war $TOMCAT_HOME/webapps/ROOT.war",
        "name": "Buid and Deploy Locally",
        "attributes": {
          "goal": "Deploy"
        },
        "type": "mvn"
      },
      {
        "commandLine": "$TOMCAT_HOME/bin/startup.sh",
        "name": "Start Tomcat",
        "attributes": {
          "previewUrl": "${server.tomcat8}"
        },
        "type": "custom"
      },
      {
        "commandLine": "$TOMCAT_HOME/bin/shutdown.sh",
        "name": "Stop Tomcat",
        "attributes": {},
        "type": "custom"
      },
      {
        "commandLine": "mvn clean fabric8:deploy -Dfabric8.mode=openshift -Dfabric8.build.strategy=docker -Dfabric8.generator.from=jboss-webserver-3/webserver31-tomcat8-openshift -f ${current.project.path}/pom.xml -P openshift -DskipTests",
        "name": "Build and Deploy to OpenShift",
        "attributes": {
          "goal": "Deploy"
        },
        "type": "mvn"
      }
    ]
  },
  "creator": {
    "name": "Eric Getchell",
    "email": "egetchel@redhat.com"
  }
}

